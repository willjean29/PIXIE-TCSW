    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-3">

            <!-- Profile Image -->
            <div class="card card-primary card-outline">
              <div class="card-body box-profile">
                <div class="text-center">
                  {{#if empresa.imagen}}
                  <img class="profile-user-img img-fluid img-circle"
                       src="/uploads/perfiles/business/{{empresa.imagen}}"
                       alt="User profile picture">
                  {{else}}
                  <img class="profile-user-img img-fluid img-circle"
                       src="/admin/admin-lte/img/company-icon.png"
                       alt="User profile picture">
                  {{/if}}

                </div>

                {{#if empresa.nombreComercial}}
                  <h3 class="profile-username text-center">{{empresa.nombreComercial}}</h3>
                {{else}}
                  <h3 class="profile-username text-center">Nombre Comercial</h3>
                {{/if}}
                

                <p class="text-muted text-center">Empresa Registrada</p>

                <ul class="list-group list-group-unbordered mb-3">
                  <li class="list-group-item">
                    {{#if empresa.ruc}}
                      <b>RUC</b> <a class="float-right">{{empresa.ruc}}</a>
                    {{/if}}              
                  </li>
                  <li class="list-group-item">
                      <b>Clientes</b> <a class="float-right">{{empresa.clientes.length}}</a>
                  </li>
                  <li class="list-group-item">
                    {{#if empresa.estado}}
                      <b>Estado</b> <a class="float-right">{{empresa.estado}}</a>
                    {{/if}}  
                  </li>
                </ul>

                <a href="#" class="btn btn-primary btn-block"><b>Activar</b></a>
              </div>
