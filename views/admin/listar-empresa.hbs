          <div class="col-md-9">
            <div class="card">
              <div class="card-header p-2">
                <ul class="nav nav-pills">
                  <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab" ><i class="fas fa-info-circle mx-1"></i>Información</a></li>
                  <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab"><i class="fas fa-map-marked-alt mx-1"></i>Maps</a></li>
                  <li class="nav-item"><a class="nav-link" href="#settings" data-toggle="tab"><i class="fas fa-id-badge mx-1"></i>Logo</a></li>
                </ul>
              </div><!-- /.card-header -->
              <div class="card-body">
                <div class="tab-content">
                  <div class="active tab-pane" id="activity">
                    <table class="table table-bordered">
                      <thead>                  
                        <tr>
                          <th style=""><i class="fas fa-caret-square-down"></i></th>
                          <th>Dato</th>
                          <th>Caracteristicas</th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                          <td><i class="fas fa-building"></i></td>
                          <th>Nombre Comercial</th>
                          {{#if empresa.nombreComercial}}
                            <td>{{empresa.nombreComercial}}</td>
                          {{/if}}
                        </tr>
                        <tr>
                          <td><i class="fas fa-file-contract"></i></td>
                          <th>Razon Social</th>

                          {{#if empresa.razonSocial}}
                            <td>{{empresa.razonSocial}}</td>
                          {{/if}}

                        </tr>
                        <tr>
                          <td><i class="fas fa-map-marker"></i></td>
                          <th>Provincia</th>
                          {{#if empresa.provincia}}
                            <td>{{empresa.provincia}}</td>
                          {{/if}}

                        </tr>
                        <tr>
                          <td><i class="fas fa-map-marker"></i></td>
                          <th>Departamento</th>
                          {{#if empresa.departamento}}
                            <td>{{empresa.departamento}}</td>
                          {{/if}}

                        </tr>
                        <tr>
                          <td><i class="fas fa-map-marker"></i></td>
                          <th>Dsitrito</th>
                          {{#if empresa.distrito}}
                            <td>{{empresa.distrito}}</td>
                          {{/if}}

                        </tr>
                        <tr>
                          <td><i class="fas fa-map-marker-alt"></i></td>
                          <th>Dirección</th>
                          {{#if empresa.direccion}}
                            <td>{{empresa.direccion}}</td>
                          {{/if}}

                        </tr>
                      </tbody>
                    </table>
                     <div class="card-body">
                        <h5 class="card-title font-weight-bold">Acciones de Empresa</h5>
                        <p class="card-text">Puede realizar estas acciones en caso desea actualizar la informacion adicional de su empresa</p>
                        <div class="row justify-content-between">
                          <a href="/business/modificar" class="btn btn-warning"><i class="fas fa-edit mx-1"></i>Editar Empresa</a>
                          <a href="#" class="btn btn-danger"><i class="fas fa-trash-alt mx-1"></i>Eliminar Empresa</a>
                        </div>
                      </div>
                  </div>
                  <!-- /.tab-pane -->
                  <div class="tab-pane" id="timeline">
                    <div class="card">
                      <div class="card-body">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d15607.438856446874!2d-77.08815623494871!3d-12.053171806684615!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xc6def8804064a4e9!2sUniversidad%20Nacional%20Mayor%20de%20San%20Marcos!5e0!3m2!1ses-419!2spe!4v1594780993698!5m2!1ses-419!2spe" width="600" height="450" frameborder="0" style="border:0; width: 100%" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
                      </div>
                    </div>
                  </div>
                  <!-- /.tab-pane -->

                  <div class="tab-pane" id="settings">
                    <form class="form-horizontal" method="POST" id="form-avatar" enctype="multipart/form-data">
                      <div class="input-group">
                        <div class="custom-file">
                          <input required type="file" class="custom-file-input" id="file-img" aria-describedby="inputGroupFileAddon04" name="image">
                          <label class="custom-file-label" for="file-img" id="label-img">Ingresar Archivo</label>
                        </div>
                        <div class="input-group-append">
                          <input type="hidden" name="dir" value="business">
                          <input type="hidden" name="url" value="/business/avatar">
                          <button class="btn btn-outline-secondary" type="submit" id="inputGroupFileAddon04">Enviar</button>
                        </div>
                      </div>
                    </form>
                    <div class="card my-2 container-preview-img" id="container-preview-img">
                      <img src="" class="img-preview" alt="avatar" id="preview-img">
                      <i class="far fa-image img-not-icon" id="default-img"></i>
                    </div>
                  </div>
                  <!-- /.tab-pane -->
                </div>
                <!-- /.tab-content -->
              </div><!-- /.card-body -->
            </div>
            <!-- /.nav-tabs-custom -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>
