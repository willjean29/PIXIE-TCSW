{{/extend}}
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">Dashboard</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/admin">Inicio</a></li>
              <li class="breadcrumb-item active">Dashboard</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-info">
              <div class="inner">

                {{#if totalPremios}}
                  <h3>{{totalPremios}}</h3>
                {{else}}
                  <h3>0</h3>
                {{/if}}
              
                <p>Premios</p>
              </div>
              <div class="icon">
                <i class="ion ion-bag"></i>
              </div>

              {{#if totalPremios}}
                <a href="/catalog/list" class="small-box-footer">Más Información <i class="fas fa-arrow-circle-right"></i></a>  
              {{else}}
                <a href="#" class="small-box-footer">Más Información <i class="fas fa-arrow-circle-right"></i></a>
              {{/if}}
            </div>
          </div>
          <!-- ./col -->
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-success">
              <div class="inner">
                {{#if totalRegistros}}
                  <h3>{{totalRegistros}}</h3>
                {{else}}
                  <h3>0</h3>
                {{/if}}
                <p>Registros</p>
              </div>
              <div class="icon">
                <i class="ion ion-stats-bars"></i>
              </div>
              {{#if totalRegistros}}
                <a href="/admin/template" class="small-box-footer">Más Información <i class="fas fa-arrow-circle-right"></i></a>
              {{else}}
                <a href="#" class="small-box-footer">Más Información <i class="fas fa-arrow-circle-right"></i></a>
              {{/if}}
            </div>
          </div>
          <!-- ./col -->
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-warning">
              <div class="inner">
                {{#if totalConcursos}}
                  <h3>{{totalClientes}}</h3>
                {{else}}
                  <h3>0</h3>
                {{/if}}
                <p>Clientes</p>
              </div>
              <div class="icon">
                <i class="ion ion-person-add"></i>
              </div>
              {{#if totalConcursos}}
                <a href="/client/list" class="small-box-footer">Más Información <i class="fas fa-arrow-circle-right"></i></a>
              {{else}}
                <a href="#" class="small-box-footer">Más Información <i class="fas fa-arrow-circle-right"></i></a>
              {{/if}}
            </div>
          </div>
          <!-- ./col -->
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-danger">
              <div class="inner">
                {{#if totalConcursos}}
                  <h3>{{totalConcursos}}</h3>
                {{else}}
                  <h3>0</h3>
                {{/if}}
                <p>Concurso</p>
              </div>
              <div class="icon">
                <i class="ion ion-pie-graph"></i>
              </div>
              {{#if totalConcursos}}
                <a href="/competition/simple/profile" class="small-box-footer">Más Información <i class="fas fa-arrow-circle-right"></i></a>
              {{else}}
                <a href="#" class="small-box-footer">Más Información <i class="fas fa-arrow-circle-right"></i></a>
              {{/if}}
            </div>
          </div>
          <!-- ./col -->
        </div>
        <!-- /.row -->
        <!-- Main row -->
        <div class="row">
          <!-- Left col -->
          <section class="col-lg-7 connectedSortable">
            <!-- Custom tabs (Charts with tabs)-->
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">
                  <i class="fas fa-chart-pie mr-1"></i>
                  Clientes
                </h3>
                <div class="card-tools">
                  <ul class="nav nav-pills ml-auto">
                    <li class="nav-item">
                      <a class="nav-link active" href="#genero" data-toggle="tab">Genero</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="#estado" data-toggle="tab">Estado</a>
                    </li>
                  </ul>
                </div>
              </div><!-- /.card-header -->
              <div class="card-body">
                <div class="tab-content">
                  <div class="tab-pane active" id="genero">
                    <div class="chart tab-pane active" id="cliente-genero-div"
                        style="position: relative; min-height: 300px; display:flex; justify-content: center;align-items: center">
                        <div class="spinner-border text-primary" role="status" id="spinner-genero">
                            <span class="sr-only">Loading...</span>
                        </div>
                        <canvas id="cliente-genero"  style="height: 300px; display: none"></canvas>                         
                    </div>
                   </div>
                  <!-- /.tab-pane -->
                  <div class="tab-pane" id="estado">
                    <div class="chart tab-pane active" id="cliente-puntos-div"
                        style="position: relative; min-height: 300px; display:flex; justify-content: center; align-items: center">
                        <div class="spinner-border text-primary" role="status" id="spinner-estado">
                            <span class="sr-only">Loading...</span>
                        </div>
                        <canvas id="cliente-puntos"  style="height: 300px; display:none">

                        </canvas>                         
                    </div>
                   </div>
                  <!-- /.tab-pane -->
                </div>
                <!-- /.tab-content -->
              </div><!-- /.card-body -->
            </div>
            <!-- /.card -->

            <!-- DIRECT CHAT -->
            <div class="card direct-chat direct-chat-primary">
              <div class="card-header">
                <h3 class="card-title">Clientes Top</h3>

                <div class="card-tools">
                  <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                  </button>
                  {{!-- <button type="button" class="btn btn-tool" data-toggle="tooltip" title="Contacts"
                          data-widget="chat-pane-toggle">
                    <i class="fas fa-comments"></i>
                  </button> --}}
                  <button type="button" class="btn btn-tool" data-card-widget="remove"><i class="fas fa-times"></i>
                  </button>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <!-- Conversations are loaded here -->
                {{!-- <div class="direct-chat-messages"> --}}
                  <div class="tab-pane active" id="">
                    <div class="chart tab-pane active" id=""
                        style="position: relative; min-height: 300px; display:flex; justify-content:center; align-items: center">
                        <div class="spinner-border text-primary" role="status" id="spinner-puntos">
                            <span class="sr-only">Loading...</span>
                        </div>
                        <canvas id="lista-puntos"  style="height: 300px; display: none"></canvas>                         
                    </div>
                   </div>
                {{!-- </div> --}}

              </div>
              <!-- /.card-body -->
            </div>
            <!--/.direct-chat -->

