<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{{> page/title}}</title>
    <link rel="shortcut icon" type="image/x-icon" href="/admin/admin-lte/img/icon-prize.png" />
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/admin/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/admin/admin-lte/css/adminlte.min.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="/admin/plugins/overlayScrollbars/css/OverlayScrollbars.min.css"
    />
    {{!-- datapicker css --}}
    <link rel="stylesheet" href="/admin/plugins/datapicker/bootstrap-datepicker.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

    <link rel="stylesheet" href="/css/custom.css">
    {{! Styles Block}}
    {{{block 'styles'}}}
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="hold-transition sidebar-mini layout-fixed">

	<!-- Site wrapper -->
    <div class="wrapper">
        {{> page/header }}
        {{> page/nav }}
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            {{{body}}}
        </div><!-- /.content-wrapper -->
        {{!-- {{> page/control }} --}}
        {{> page/footer }}
    </div><!-- ./wrapper -->

    <!-- jQuery -->
    <script src="/admin/plugins/jquery/jquery.min.js"></script>
    <!-- overlayScrollbars -->
    <script src="/admin/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="/admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="/admin/admin-lte/js/adminlte.js"></script>
    {{!-- datapicker --}}
    <script src="/admin/plugins/moment/moment.min.js"></script>
    <script src="/admin/plugins/moment/locales.min.js"></script>
    <script src="/admin/plugins/datapicker/bootstrap-datepicker.min.js"></script>
    <script>
        
        // configuarar datepicker
        $('.fecha').datepicker({
            format: 'dd/mm/yyyy',
            language: 'es',
            orientation: 'auto',
            autoclose: true,
        });
        
        // configurar tooltips
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        });
    </script>
    <!-- AdminLTE for demo purposes -->
    <script src="/admin/admin-lte/js/demo.js"></script>
    <script src="/dist/bundle.js"></script>
    {{! Scripts block}}
    {{{block "scripts"}}}
</body>
</html>